{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "strictNullChecks": false,
    "module": "es6",
    "target": "esnext",
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  },
  "allowJs": true
}
}
